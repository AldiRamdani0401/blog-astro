---
// import Caution from "../react/Caution.jsx";

// === Components ===
import Search from "./Search/index.astro";
import CautionDev from "../utils/Cautions/CautionDev.astro";
import BtnModeTheme from "../Buttons/Theme/index.astro";
---

<script is:inline>
  // HANDLERS //

  // --- MOBILE --- //
  // ** NAV ** //
  function openMenu() {
    const element = document.getElementById("mobile-menu");
    element.classList.remove("hidden");
    element.classList.add("absolute");
  }
  function closeMenu() {
    const element = document.getElementById("mobile-menu");
    element.classList.remove("absolute");
    element.classList.add("hidden");
  }
  // ** end of NAV ** //
</script>


<!-- CAUTION -->
<CautionDev/>
<!-- end of CAUTION -->

<!-- HEADER -->
<header class="flex flex-col justify-between items-center h-fit">
  <!-- === NAVBAR ===  -->
  <div
    class="flex flex-row justify-between w-full items-center h-fit px-2 lg:px-10 bg-gray-800 dark:bg-slate-900"
  >
    <a href="/" class="text-2xl font-medium text-white py-2">MyBlog ðŸš€</a>
    <!-- === DESKTOP === -->
     <!-- Container 1 : List Menu -->
    <nav
      class="hidden lg:flex flex-row h-full text-lg justify-around w-1/4 text-slate-200"
    >
      <a
        href="/"
        class="flex items-center justify-center text-left w-full h-full hover:font-bold hover:bg-blue-900"
        >Home</a
      >
      <a
        href="/about"
        class="flex items-center justify-center w-full h-full hover:font-bold hover:bg-blue-900"
        >About</a
      >
      <a
        href="/articles"
        class="flex items-center justify-center w-full h-full hover:font-bold hover:bg-blue-900"
        >Articles</a
      >
      <a
        href="/categories"
        class="flex items-center justify-center w-full h-full px-2 hover:font-bold hover:bg-blue-900"
        >Categories</a
      >
    </nav>
    <!-- end of List Menu -->
     <!-- Container 2 : Theme Toogle & Sign In -->
     <div class="flex flex-row items-center gap-2 h-full w-1/10">
       <BtnModeTheme/>
       <!-- Sign In -->
      <a
        href="/auth/login"
        class="hidden lg:flex justify-center items-center h-full w-full px-2 text-slate-200 bg-indigo-700 hover:font-bold hover:bg-indigo-900"
        >Sign In</a
      >
     </div>
    <!-- === end of DESKTOP === -->

    <!-- === MOBILE === -->
    <button
      type="button"
      class="block lg:hidden text-white text-2xl"
      onclick="openMenu()"
    >
      <svg
        fill="none"
        stroke-width="2"
        xmlns="http://www.w3.org/2000/svg"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        viewBox="0 0 24 24"
        height="1em"
        width="1em"
        style="overflow: visible; color: currentcolor;"
        ><path d="M3 12 21 12"></path><path d="M3 6 21 6"></path><path
          d="M3 18 21 18"></path></svg
      >
    </button>
    <!-- === NAVIGATION === -->
    <div id="mobile-menu" class="hidden h-full w-full top-0 left-0">
      <!-- Masking -->
      <div class="w-full h-full bg-black opacity-30"></div>
      <!-- Menu -->
      <div
        class="absolute lg:hidden flex flex-col justify-between pt-5 pb-10 top-0 bg-gray-800 right-0 h-full w-[70%]"
      >
        <div class="flex flex-col gap-2">
          <!-- Close Button -->
          <button
            type="button"
            class="px-2 w-fit text-3xl text-red-700"
            onclick="closeMenu()"
            ><svg
              fill="currentColor"
              stroke-width="0"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 1024 1024"
              height="1em"
              width="1em"
              style="overflow: visible; color: currentcolor;"
              ><path
                d="m563.8 512 262.5-312.9c4.4-5.2.7-13.1-6.1-13.1h-79.8c-4.7 0-9.2 2.1-12.3 5.7L511.6 449.8 295.1 191.7c-3-3.6-7.5-5.7-12.3-5.7H203c-6.8 0-10.5 7.9-6.1 13.1L459.4 512 196.9 824.9A7.95 7.95 0 0 0 203 838h79.8c4.7 0 9.2-2.1 12.3-5.7l216.5-258.1 216.5 258.1c3 3.6 7.5 5.7 12.3 5.7h79.8c6.8 0 10.5-7.9 6.1-13.1L563.8 512z"
              ></path></svg
            ></button
          >
          <!-- List Menu -->
          <nav
            class="flex flex-col h-fit text-lg justify-around w-full text-slate-200 gap-2"
          >
            <a
              href="/"
              class="flex items-center justify-start xl:justify-center px-4 py-1 w-full h-full hover:font-bold hover:bg-blue-900"
              >Home</a
            >
            <a
              href="/about"
              class="flex items-center justify-start xl:justify-center px-4 py-1 w-full h-full hover:font-bold hover:bg-blue-900"
              >About</a
            >
            <a
              href="/articles"
              class="flex items-center justify-start xl:justify-center px-4 py-1 w-full h-full hover:font-bold hover:bg-blue-900"
              >Articles</a
            >
            <a
              href="/categories"
              class="flex items-center justify-start xl:justify-center px-4 py-1 w-full h-full hover:font-bold hover:bg-blue-900"
              >Categories</a
            >
            <a
              href="/auth/login"
              class="flex items-center justify-start xl:justify-center px-4 py-1 w-full h-full hover:font-bold hover:bg-indigo-800"
              >Sign In</a
            >
          </nav>
        </div>
        <div class="flex flex-col justify-center items-center text-slate-200">
          <span>&copy; Copyright, Aldi Ramdani</span><span
            >All Rights Reserved</span
          >
        </div>
      </div>
    </div>
    <!-- === end of MOBILE === -->
  </div>
  <!-- === end of NAVBAR ===  -->
  <!-- === SEARCH === -->
  <Search />
</header>

