---
import BaseLayout from "./BaseLayout.astro";

// Components
import NavBar from "../components/NavBar/index.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
}
const { title = "Basic" } = Astro.props;
---

<BaseLayout title={title}>
  <div
    class="relative flex flex-col h-screen w-screen overflow-x-hidden bg-[#FBFBFB] dark:bg-gray-900 border"
  >
    <!-- Header -->
    <NavBar />
    <div class="flex-1 px-10 py-5 overflow-auto">
      <!-- Content -->
      <slot />
      <!-- Footer -->
      <Footer />
    </div>
  </div>
</BaseLayout>
